<endpoint name="data/inputs/otlpinput">
    <header>OTLP Input</header>
    <breadcrumb>
        <parent hidecurrent="False">datainputstats</parent>
        <name>OTLP Input</name>
    </breadcrumb>
    <elements>
        <element name="configFields" type="fieldset">
            <key name="legend">OTLP</key>
            <view name="list"/>
            <view name="edit"/>
            <view name="create"/>
            <elements>
                <element name="name" label="Name" required="true">
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="helpText">Name of the input (required)</key>
                </element>
                <element name="grpc_port" label="gRPC port">
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">4317</key>
                    <key name="helpText">Port on which the receiver will listen for gRPC OTLP traffic</key>
                </element>
                <element name="http_port" label="HTTP port">
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">4318</key>
                    <key name="helpText">Port on which the receiver will listen for HTTP OTLP traffic</key>
                </element>
                <element name="listen_address" label="Listening address">
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">0.0.0.0</key>
                    <key name="helpText">The listening address to bind the receiver to</key>
                </element>
            </elements>
        </element>

        <element name="indexField" type="fieldset">
            <key name="legend">Index</key>
            <key name="helpText">Set the destination index for this source.</key>
            <view name="list"/>
            <view name="edit"/>
            <view name="create"/>
            <elements>
                <element name="index" type="select" label="Index">
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="dynamicOptions" type="dict">
                        <key name="keyName">title</key>
                        <key name="keyValue">title</key>
                        <key name="splunkSource">'/data/indexes'</key>
                        <key name="splunkSourceParams" type="dict">
                            <key name="search">'isInternal=false disabled=false'</key>
                            <key name="count">-1</key>
                            <key name="datatype">'all'</key>
                        </key>
                    </key>
                </element>
            </elements>
        </element>
        <element name="eai:acl.app" label="App">
            <view name="list"/>
            <key name="processValueList">entity['eai:acl']['app'] or ""</key>
        </element>

    </elements>
</endpoint>